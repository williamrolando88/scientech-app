{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "plugin:storybook/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "rules": {
    "tailwindcss/classnames-order": 0,
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "^_",
        "args": "after-used",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": [2, { "allow": ["warn", "error"] }],
    "react/display-name": 0
  }
}
